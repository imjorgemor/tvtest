{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "react-app"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "@typescript-eslint/no-shadow": [
                    "error"
                ],
                "no-shadow": "off",
                "no-undef": "off",
                "react/react-in-jsx-scope": "off",
                "semi": [
                    "never"
                ]
            }
        }
    ]
}